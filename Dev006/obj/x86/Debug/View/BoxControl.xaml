<UserControl
    x:Class="Dev006.View.BoxControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Dev006.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>

        <Grid x:ConnectionId='2' Name="PossGrid"  Background="WhiteSmoke" Visibility="Visible" BorderBrush="Black" BorderThickness="1">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Viewbox Grid.Row="0" Grid.Column="0" Stretch="Uniform">
                <TextBlock x:ConnectionId='15' x:Name="Block1Text"                                               >1</TextBlock>
            </Viewbox>
            <Viewbox Grid.Row="0" Grid.Column="1" Stretch="Uniform">
                <TextBlock x:ConnectionId='14' x:Name="Block2Text"                                               >2</TextBlock>
            </Viewbox>
            <Viewbox Grid.Row="0" Grid.Column="2" Stretch="Uniform">
                <TextBlock x:ConnectionId='13' x:Name="Block3Text"                                               >3</TextBlock>
            </Viewbox>
            <Viewbox Grid.Row="1" Grid.Column="0" Stretch="Uniform">
                <TextBlock x:ConnectionId='12' x:Name="Block4Text"                                              >4</TextBlock>
            </Viewbox>
            <Viewbox Grid.Row="1" Grid.Column="1" Stretch="Uniform">
                <TextBlock x:ConnectionId='11' x:Name="Block5Text"                                              >5</TextBlock>
            </Viewbox>
            <Viewbox Grid.Row="1" Grid.Column="2" Stretch="Uniform">
                <TextBlock x:ConnectionId='10' x:Name="Block6Text"                                              >6</TextBlock>
            </Viewbox>
            <Viewbox Grid.Row="2" Grid.Column="0" Stretch="Uniform">
                <TextBlock x:ConnectionId='9' x:Name="Block7Text"                                              >7</TextBlock>
            </Viewbox>
            <Viewbox Grid.Row="2" Grid.Column="1" Stretch="Uniform">
                <TextBlock x:ConnectionId='8' x:Name="Block8Text"                                              >8</TextBlock>
            </Viewbox>
            <Viewbox Grid.Row="2" Grid.Column="2" Stretch="Uniform">
                <TextBlock x:ConnectionId='7' x:Name="Block9Text"                                              >9</TextBlock>
            </Viewbox>
        </Grid>
        <Grid x:ConnectionId='3' x:Name="AnswerGrid" Background="WhiteSmoke" Visibility="Visible" BorderBrush="Black" BorderThickness="1">
            <Viewbox Stretch="Uniform">
                <TextBlock x:ConnectionId='6' x:Name="AText"></TextBlock>
            </Viewbox>
        </Grid>
        <Grid x:ConnectionId='4' x:Name="WrongAnswerGrid" Background="WhiteSmoke" Visibility="Visible" BorderBrush="Black" BorderThickness="1"                                                >
            <Viewbox Stretch="Uniform">
                <TextBlock x:ConnectionId='5' x:Name="XText" Foreground="Red">X</TextBlock>
            </Viewbox>
        </Grid>
    </Grid>
</UserControl>

